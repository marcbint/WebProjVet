@model WebProjVet.Models.Proprietario

@{
    ViewData["Title"] = "Delete";
}



<form asp-action="Delete">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <h3 class="text-center">PROPRIETÁRIO</h3>
                        <h3>Realmente deseja remover esse registro?</h3>
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="hidden" asp-for="Id" id="idRegistro">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                <label asp-for="PessoaTipo" class="control-label"></label>
                                <select disabled id="idTipo" asp-for="PessoaTipo" asp-items="Html.GetEnumSelectList<PessoaTipo>()" class="form-control">
                                    <option selected="selected" value="">SELECIONE</option>
                                </select>
                            </div>
                            <div class="col-lg-3">
                                <label asp-for="Documento" class="control-label"></label>
                                <input asp-for="Documento" id="inscricaoEstadual" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Documento" class="text-danger"></span>
                            </div>
                            <div class="col-lg-5">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="col-lg-4">
                                <input type="hidden" asp-for="Id" id="idTratamento">
                            </div>
                        </div>
                        <div id="juridica" class="row" style="padding-top:10px">
                            <div class="col-lg-5">
                                <label asp-for="RazaoSocial" class="control-label"></label>
                                <input asp-for="RazaoSocial" id="razaoSocial" class="form-control" readonly="readonly" />
                                <span asp-validation-for="RazaoSocial" class="text-danger"></span>
                            </div>
                            <div class="col-lg-3">
                                <label asp-for="InscricaoEstadual" class="control-label"></label>
                                <input asp-for="InscricaoEstadual" id="inscricaoEstadual" class="form-control" readonly="readonly" />
                                <span asp-validation-for="InscricaoEstadual" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row" style="padding-top:10px">
                            <div class="col-lg-4">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-lg-3">
                                <label asp-for="Telefone" class="control-label"></label>
                                <input asp-for="Telefone" class="form-control" readonly="readonly" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="padding-top:10px">
                            <div class="col-lg-4">
                                <label asp-for="Situacao" class="control-label"></label>
                                <select asp-for="Situacao" asp-items="Html.GetEnumSelectList<Situacao>()" class="form-control">
                                    <option selected="selected" value="">SELECIONE</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="headingOne">
                                        <button disabled class="btn btn-warning col-lg-12" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            ENDEREÇOS
                                        </button>
                                    </div>
                                </div>
                                <div class="row" style="padding-top:10px">
                                    <div class="col-lg-12">
                                        <div class="collapse show" id="collapseOne" aria-labelledby="headingOne" data-parent="#accordion">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <textarea asp-for="TabelaItensEnderecoJson" style="display:none" id="tabelaItensEnderecoJson"></textarea>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="panel panel-default panel-table">
                                                        <div class="panel-heading">
                                                            <div class="row">
                                                                <div class="col-lg-2">
                                                                    <label asp-for="EnderecoTipo" class="control-label"></label>
                                                                    <select disabled id="sltTipoEndereco" asp-for="EnderecoTipo" asp-items="Html.GetEnumSelectList<EnderecoTipo>()" class="form-control">
                                                                        <option selected="selected" value="">SELECIONE</option>
                                                                    </select>
                                                                </div>
                                                                <div class="col-lg-4">
                                                                    <label class="control-label">ENDEREÇO</label>
                                                                    <input type="text" id="txtEndereco" class="form-control" readonly="readonly" />
                                                                </div>
                                                                <div class="col-lg-2">
                                                                    <label class="control-label">COMPLEMENTO</label>
                                                                    <input type="text" id="txtComplemento" class="form-control" readonly="readonly" />
                                                                </div>
                                                                <div class="col-lg-3">
                                                                    <label class="control-label">CIDADE</label>
                                                                    <input type="text" id="txtCidade" class="form-control" readonly="readonly" />
                                                                </div>
                                                                <div class="col-lg-1">
                                                                    <label class="control-label">UF</label>
                                                                    <input type="text" id="txtUf" class="form-control" readonly="readonly" />
                                                                </div>
                                                                <div class="col-lg-12">
                                                                    <span id="resultAddTabelaEndereco" class="text-danger"></span>
                                                                </div>
                                                                <div class="col-lg-12">
                                                                    <br />
                                                                    <input id="btnAddEndereco" type="button" value="ADICIONAR" class="btn btn-primary btn-block" disabled />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="panel-body">
                                                            <table id="itensTabelaEndereco" class="table table-striped table-bordered table-list">
                                                                <thead>
                                                                    <tr>
                                                                        <th>ID</th>
                                                                        <th>TIPO</th>
                                                                        <th>ENDEREÇO</th>
                                                                        <th>COMPLEMENTO</th>
                                                                        <th>CIDADE</th>
                                                                        <th>UF</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody id="listaTbodyEndereco">
                                                                    <!--Lista dos serviços cadastrados -->
                                                                    <!--https://stackoverflow.com/questions/14165632/asp-net-mvc-4-for-loop-posts-model-collection-properties-but-foreach-does-not-->
                                                                    @foreach (var item in Model.ProprietarioEnderecos)
                                                                    {
                                                                        <tr>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.Id)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.EnderecoTipo)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.Endereco)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.Complemento)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.Cidade)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => item.Uf)
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="submit" value="REMOVER" class="btn btn-danger btn-lg btn-block" />
                                    </div>
                                </div>
                                <div class="row" style="padding-top:10px">
                                    <div class="col-md-12">
                                        <a asp-action="Index" class="btn btn-info btn-lg btn-block">VOLTAR</a>
                                    </div>
                                </div>
                            </div>


</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('#idTipo').change(function () {
                var tipo = $("#idTipo option:selected").text();

                if (tipo == 'FÍSICA') {
                    $('#juridica').hide();

                } else if (tipo == 'JURÍDICA') {
                    $('#juridica').show();

                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            var Tipo = document.getElementById("idTipo");

            if (Tipo.options[Tipo.selectedIndex].text == 'FÍSICA') {
                $('#juridica').hide();
            } else if (Tipo.options[Tipo.selectedIndex].text == 'JURÍDICA') {
                $('#juridica').show();
            }

        });
    </script>

    }

