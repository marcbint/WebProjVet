@model IEnumerable<WebProjVet.Models.Proprietario>

@{
    ViewData["Title"] = "Index";
}


<!------ Responsável pelo processo de busca ---------->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>



<body>

    <div class="container">
        <div class="row">
            <h3 class="text-center">PROPRIETÁRIOS</h3>
        </div>
        <input id="myInput" class="pull-right form-inline" type="text" placeholder="Buscar...">
        <p>
            <a asp-action="Create" class="btn btn-primary pull-left">INCLUIR</a>
        </p>
        <br><br>
        <div class="row">
            <div class="col-md-12">
                <table id="datatable" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NOME</th>
                            <th>TIPO</th>
                            <th>EDITAR</th>
                            <th>EXCLUIR</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PessoaTipo)
                                </td>                               
                                <td><p data-placement="top" data-toggle="tooltip" title="EDITAR"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                                <td><p data-placement="top" data-toggle="tooltip" title="EXCLUIR"><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a></p></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</body>

@section Scripts{

    <script>
    $(document).ready(function () {
        $('#datatable').dataTable();

        $("[data-toggle=tooltip]").tooltip();

    });
    </script>

    <script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    </script>


}

