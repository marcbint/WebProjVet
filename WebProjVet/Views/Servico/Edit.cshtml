@model WebProjVet.Models.Servico
@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

<link rel="stylesheet" href="css/bootstrap-multiselect/bootstrap-multiselect.css" type="text/css">
<script type="text/javascript" src="js/bootstrap-multiselect/bootstrap-multiselect.js"></script>



<form asp-action="Edit">
    <div class="container" style="padding-top:50px">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <h3 class="text-center">SERVIÇO</h3>
                        <div class="row">
                            <div class="col-lg-12">
                                <input type="hidden" asp-for="Id" id="idPrimary">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                <label asp-for="Codigo" class="control-label"></label>
                                <input asp-for="Codigo" class="form-control text-uppercase" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control text-uppercase" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="col-lg-2">
                                <label asp-for="ServicoUnidade" class="control-label"></label>
                                <select asp-for="ServicoUnidade" asp-items="Html.GetEnumSelectList<ServicoUnidade>()" class="form-control">
                                    <option selected="selected" disabled value=null>SELECIONE</option>
                                </select>
                                <span asp-validation-for="ServicoUnidade" class="text-danger"></span>
                            </div>
                            <div class="col-lg-2">
                                <label asp-for="Valor" class="control-label"></label>
                                <input id="txtValor" asp-for="Valor" class="form-control text-uppercase text-right" />
                                <span asp-validation-for="Valor" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="padding-top:10px">
                            <div class="col-lg-2">
                                <label asp-for="ServicoTipo" class="control-label"></label>
                                <select asp-for="ServicoTipo" asp-items="Html.GetEnumSelectList<ServicoTipo>()" class="form-control"></select>
                                <span asp-validation-for="ServicoTipo" class="text-danger"></span>
                            </div>
                            <div class="col-lg-2">
                                <label asp-for="Situacao" class="control-label"></label>
                                <select asp-for="Situacao" asp-items="Html.GetEnumSelectList<Situacao>()" class="form-control">
                                    <option selected="selected" value="">SELECIONE</option>
                                </select>
                                <span asp-validation-for="Situacao" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row" style="padding-top:20px">
                            <div class="col-md-4">
                                <label for="exampleFormControlSelect2">LANÇAMENTO PERMITIDO</label>
                                <select multiple class="form-control" asp-for="AnimalTipo" asp-items="Html.GetEnumSelectList<AnimalTipo>()" id="exampleFormControlSelect2">                    
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label">LANÇAMENTO PERMITIDO:</label>
                                <div class="form-check">
                                    <label>
                                        <input id="chkLpDoadora" type="checkbox" name="check" value="1" checked> <span class="label-text">DOADORA</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkLpGaranhao" type="checkbox" name="check" value="2"> <span class="label-text">GARANHÃO</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkLpReceptora" type="checkbox" name="check" value="3"> <span class="label-text">RECEPTORA</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkLpSemen" type="checkbox" name="check" value="4"> <span class="label-text">SÉMEN</span>
                                    </label>
                                </div>
                            </div>
                            <div id="divIncObri" class="col-md-4">
                                <label class="control-label">INCLUSÃO OBRIGATÓRIA:</label>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIoDoadora" type="checkbox" name="check" value="1" checked> <span class="label-text">DOADORA</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIoGaranhao" type="checkbox" name="check" value="2"> <span class="label-text">GARANHÃO</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIoReceptora" type="checkbox" name="check" value="3"> <span class="label-text">RECEPTORA</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIoSemen" type="checkbox" name="check" value="4"> <span class="label-text">SÉMEN</span>
                                    </label>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <label class="control-label">INCLUSÃO OPCIONAL:</label>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIopDoadora" type="checkbox" name="check" value="1" checked> <span class="label-text">DOADORA</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIopGaranhao" type="checkbox" name="check" value="2"> <span class="label-text">GARANHÃO</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIopReceptora" type="checkbox" name="check" value="3"> <span class="label-text">RECEPTORA</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input id="chkIopSemen" type="checkbox" name="check" value="4"> <span class="label-text">SÉMEN</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding-top:50px">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-md-4">

                                <p>1. Customs Checkboxes</p>
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox" name="check" checked> <span class="label-text">Option 01</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox" name="check"> <span class="label-text">Option 02</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox" name="check"> <span class="label-text">Option 03</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input type="checkbox" name="check" disabled> <span class="label-text">Option 04</span>
                                    </label>
                                </div>

                            </div>
                            <div class="col-md-4">

                                <p>2. Customs Radios</p>
                                <div class="form-check">
                                    <label>
                                        <input type="radio" name="radio" checked> <span class="label-text">Option 01</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input type="radio" name="radio"> <span class="label-text">Option 02</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input type="radio" name="radio"> <span class="label-text">Option 03</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label>
                                        <input type="radio" name="radio" disabled> <span class="label-text">Option 04</span>
                                    </label>
                                </div>

                            </div>
                            <div class="col-md-4">

                                <p>3.Radios Toggles</p>
                                <div class="form-check">
                                    <label class="toggle">
                                        <input type="radio" name="toggle" checked> <span class="label-text">Option 01</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="toggle">
                                        <input type="radio" name="toggle"> <span class="label-text">Option 02</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="toggle">
                                        <input type="radio" name="toggle"> <span class="label-text">Option 03</span>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="toggle">
                                        <input type="radio" name="toggle" disabled> <span class="label-text">Option 04</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="REGISTRAR" class="btn btn-success btn-lg btn-block" />
            </div>
        </div>
        <div class="row" style="padding-top:20px">
            <div class="col-md-12">
                <a asp-action="Index" class="btn btn-info btn-lg btn-block">VOLTAR</a>
            </div>
        </div>
    </div>
</form>



