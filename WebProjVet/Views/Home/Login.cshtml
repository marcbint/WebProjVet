@model Usuario
<style type="text/css">

    .login-form {
        width: 340px;
        margin: 50px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .input-group-addon .fa {
        font-size: 18px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>

<div class="media">
    <img  class="align-self-center img-responsive" src="~/images/cabecalhoCH.png" alt="CH REPRODUÇÃO" />
</div>

<div class="login-form">
    <form asp-controller="Home" asp-action="Login" method="post">
        <h2 class="text-center">Sistema WebProjVet</h2>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input type="text" asp-for="Login" class="form-control" placeholder="Email">
            </div>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input type="password" asp-for="Senha" class="form-control" placeholder="Senha" required="required">
            </div>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Lembrar meu acesso</label>
            <a href="#" class="pull-right">Esqueceu a senha?</a>
        </div>
    </form>
    <p class="text-center small">Não possui uma conta! <a href="#">Cadastre aqui.</a>.</p>
</div>
