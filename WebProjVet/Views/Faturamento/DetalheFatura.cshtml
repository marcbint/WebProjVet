@model WebProjVet.Models.Faturamento
@{
    ViewData["Title"] = "DetalheFatura";
}

<div class="container" style="padding-top:50px">
    
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="media">
                    <img  class="align-self-center img-responsive" src="~/images/cabecalhoCH.png" alt="CH REPRODUÇÃO" />
                </div>
                <div class="panel-heading">
                    <div class="row" style="padding-top:10px; padding-left:10px">
                        <h3 class="text-center">RELATÓRIO MENSAL</h3>
                        <div class="form-inline">
                            <h4 class="text-center col-lg-12">PROPRIETÁRIO: <p>@Model.Proprietario.Nome</p></h4>
                        </div>
                    </div>

                    @foreach (var item in Model.FaturamentoEntradas)
                    {
                        <div class="row" style="padding-top:20px">

                        </div>

                        <div class="row table-bordered" style="padding-top:10px; padding-left:10px">
                            <div class="row" style="padding-top:10px">
                                <div class="col-lg-3">
                                    <label class="control-label">ESTADIA MENSAL DO ANIMAL:</label>
                                </div>
                                <div class="col-lg-4 text-left">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.Animais.Nome)</label>
                                </div>
                            </div>

                            <div class="row" style="padding-top:10px">
                                <div class="col-lg-3 text-right">
                                </div>
                                <div class="col-lg-4 text-right">
                                    <label class="control-label">VALOR / ANIMAL / MÊS:</label>
                                </div>
                                <div class="col-lg-4 text-left">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.Valor)</label>
                                </div>
                            </div>

                            <div class="row" style="padding-top:10px">
                                <div class="col-lg-3 text-right">
                                </div>
                                <div class="col-lg-4 text-right">
                                    <label class="control-label">DATA FECHAMENTO:</label>
                                </div>
                                <div class="col-lg-4 text-left">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.DataFaturamento)</label>
                                </div>
                            </div>

                            <div class="row" style="padding-top:10px">
                                <div class="col-lg-3 text-right">
                                </div>
                                <div class="col-lg-4 text-right">
                                    <label class="control-label">TOTAL DE DIAS:</label>
                                </div>
                                <div class="col-lg-4 text-left">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.Dias)</label>
                                </div>
                            </div>

                            <div class="row" style="padding-top:10px">
                                <div class="col-lg-3 text-right">
                                </div>
                                <div class="col-lg-4 text-right">
                                    <label class="control-label">VALOR TOTAL:</label>
                                </div>
                                <div class="col-lg-4 text-left">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.Valor)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top:20px">

                        </div>


                    }

                    @foreach (var item in Model.FaturamentoServicos)
                    {
                        <div class="row table-bordered" style="padding-top:10px">
                            <div>
                                <div class="col-lg-12">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.Servico.Nome)</label>
                                </div>
                            </div>

                            <div class="row" style="padding-top:10px">
                                <div class="col-lg-3 text-right">
                                </div>
                                <div class="col-lg-4 text-right">
                                    <label class="control-label">VALOR TOTAL:</label>
                                </div>
                                <div class="col-lg-4 text-left">
                                    <label class="control-label">@Html.DisplayFor(modelItem => item.Valor)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-top:20px">

                        </div>

                    }

                    <div class="row table-bordered" style="padding-top:10px">
                        <div>
                            <div class="col-lg-12">
                                <label class="control-label">CONTA PARA DEPÓSITO</label>
                            </div>
                        </div>

                        <div class="row" style="padding-top:10px">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">BANCO:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                <label class="control-label">BRADESCO</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">AGÊNCIA:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                <label class="control-label">056</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">CONTA CORRENTE:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                <label class="control-label">103157-0</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">CPF:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                <label class="control-label">301.572.928-43</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">TITULAR:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                <label class="control-label">CLAUDIO HAGA</label>
                            </div>
                        </div>

                        <div class="row" style="padding-top:20px">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">VENCIMENTO:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                @{
                                    DateTime vencimento = Model.Data.AddDays(10);
                                }
                                <label class="control-label">@vencimento.ToString("dd/MM/yyyy")</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 text-right">
                            </div>
                            <div class="col-lg-4 text-right">
                                <label class="control-label">VALOR TOTAL DA FATURA:</label>
                            </div>
                            <div class="col-lg-4 text-left">
                                <label class="control-label">@Model.Valor</label>
                            </div>
                        </div>

                    </div>
                    <div class="row" style="padding-top:20px"></div>
                </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="REGISTRAR" class="btn btn-success btn-lg btn-block" />
        </div>
    </div>
    <div class="row" style="padding-top:20px">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-info btn-lg btn-block">VOLTAR</a>
        </div>
    </div>
</div>













