@model WebProjVet.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abqm" class="control-label"></label>
                <input asp-for="Abqm" class="form-control" />
                <!--<span asp-validation-for="Abqm" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <label asp-for="AnimalTipo" class="control-label"></label>
                <select asp-for="AnimalTipo" asp-items="Html.GetEnumSelectList<AnimalTipo>()" class="form-control">
                    <option selected="selected" value="">Selecione</option>
                </select>
                <span asp-validation-for="AnimalTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
